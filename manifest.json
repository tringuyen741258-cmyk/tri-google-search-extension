{
  "manifest_version": 3,
  "name": "Quick Google Search Launcher",
  "version": "1.0.1",
  "description": "Open Google Search instantly with your keyword. A fast and simple launcher that works completely locally.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://www.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
